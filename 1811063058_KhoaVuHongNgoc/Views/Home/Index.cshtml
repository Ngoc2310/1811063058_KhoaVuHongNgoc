@model _1811063058_KhoaVuHongNgoc.ViewModels.CourseViewModel
@{
    ViewBag.Title = "Home Page";
}

<h2>Danh sách đăng ký</h2>

<div class="row">
    <ul class="course">
        @foreach (var course in Model.UpcommingCourses)
        {
            <li>
                <div class="date">
                    <div class="month">
                        @course.DateTime.ToString("MM")
                    </div>
                    <div class="day">
                        @course.DateTime.ToString("dd")
                    </div>
                </div>
                <div class="details">
                    <span class="lecturer">
                        @course.Lecturer.Name
                        @if (Model.ShowAction)
                         {
                            <button class="btn btn-default btn-sm js-toggle-follow" data-user-id="@course.LecturerId">Follow</button>
                        }
                    </span>
                    <span class="category">
                        @course.Category.Name
                    </span>
                    @if (Model.ShowAction)
                    {
                        <button class="btn btn-default btn-sm js-toggle-follow" data-user-id="@course.Id">Going</button>
                    }
                </div>
            </li>
        }
    </ul>
    
</div>

@section scripts
    {
    <script>
            $(document).ready(function () {
                $(".js-toggle-attendance").click(function (e) {
                    var button = $(e.target);
                    if (button.hasClass("btn-default")) {
                        $.post("/api/attendances", { courseId: button.attr("data-course-id") })
                            .done(function () {
                                button
                                    .removeClass("btn-default")
                                    .addClass("btn-primary")
                                    .text("Going");
                            })
                            .fail(function () {
                                alert("Something failed! top");
                            });
                    } else {
                        $.ajax({
                            url: "/api/attendances/" + button.attr("data-course-id"),
                            method: "DELETE"
                        })
                            .done(function () {
                                button
                                    .removeClass("btn-primary")
                                    .addClass("btn-default")
                                    .text("Going?");
                            })
                            .fail(function () {
                                alert("Something failed! bot");
                            });
                    }

                });
                $(".js-toggle-follow").click(function (e) {
                    var button = $(e.target);
                    if (button.hasClass("btn-default")) {
                        $.post("/api/followings", { followeeId: button.attr("data-user-id") })
                            .done(function () {
                                button
                                    .removeClass("btn-default")
                                    .addClass("btn-primary")
                                    .text("Following");
                            })
                            .fail(function () {
                                alert("Something failed!");
                            });

                    } else {
                        $.ajax({
                            url: "/api/Followings/" + button.attr("data-user-id"),
                            method: "DELETE"
                        })
                            .done(function () {
                                button
                                    .removeClass("btn-primary")
                                    .addClass("btn-default")
                                    .text("Follow");
                            })
                            .fail(function () {
                                alert("Something failed! bot");
                            });
                    }

                });
            });
    </script>
}
</div>